<% include ./../partials/header %>
<div class="container">
    <div class="row">
            <h1 style="text-align:center">Add new to <%= campground.name%></h1>
            <div style="width:30%; margin:20px auto;">
                
            <form action="/campgrounds/<%= campground._id%>/comments" method="POST" class="form-group">
                <div class="form-group">
                     <input type="text" name="comment[text]" placeholder="text" class="form-control">
                </div>
               
                <div class="form-group">
                      <input type="submit" class="btn btn-lg btn-primary btn-block">
                </div>
            </form>
            <a href="/">Go back</a>
        </div>
    </div>
</div>
<% include ./../partials/footer %>